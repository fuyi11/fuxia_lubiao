<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fuxiazhilu.MainActivity"
    tools:showIn="@layout/app_bar_main"
    >

    <com.fuxiazhilu.widget.APSTSViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        />
    <RelativeLayout
        android:id="@+id/rl_tabs"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">
        <com.lhh.apst.library.AdvancedPagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            style="@style/weibo_icon_style"
            android:fillViewport="false"/>
        <ImageView
            android:id="@+id/ivCenterBtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:background="@color/google_red"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>



</RelativeLayout>
